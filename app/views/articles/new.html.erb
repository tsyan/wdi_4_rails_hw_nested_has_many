<h1>Create a New Article!</h1>

<h3>The author of this article is: <%= @user.name %></h3>

<%= form_for [@user, @article] do |f| %>
	<p><%= f.label :title %></p>
	<p><%= f.text_field :title, :size => 80 %></p>
	<p><%= f.label :body %></p>
	<p><%= f.text_area :body, :cols => "60", :rows => "20"  %></p>
	<p><%= f.submit %></p>
<% end %>
